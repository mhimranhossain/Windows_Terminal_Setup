# Basic Settings
set shell powershell
set hidden true
set ignorecase true
set icons true
set scrolloff 10

cmd open &start $Env:f
cmd doc $lf -doc | less


# Custom Functions
cmd mkdir ${{
  printf "Directory Name: "
  read ans
  mkdir $ans
}}

cmd mkfile ${{
  printf "File Name: "
  read ans
  $EDITOR $ans
}}

# Bindings
# Remove some defaults
map m
map o
map n
map "'"
map '"'
map d
map c $code "$f"

# Basic Functions
map . set hidden!
map DD trash
map p paste
map x cut
map y copy
map <enter> open
map R reload
map mf mkfile
map md mkdir
map bg setwallpaper
map C clear

map dd trash
map dr restore_trash

map <enter> $nvim $Env:f